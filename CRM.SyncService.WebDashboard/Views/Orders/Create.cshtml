@model CRM.SyncService.WebDashboard.Models.Order
@{
    ViewData["Title"] = "Tạo Đơn hàng mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/orders-create.css" rel="stylesheet" />

<div class="la-page-header">
    <h1 class="la-page-title">
        <i class="bi bi-plus-circle-fill"></i>
        Thêm đơn hàng mới
    </h1>
    <div class="la-breadcrumb">
        <a href="/"><i class="bi bi-house-door"></i> Dashboard</a>
        <i class="bi bi-chevron-right"></i>
        <a href="/Orders">Đơn hàng</a>
        <i class="bi bi-chevron-right"></i>
        <span>Tạo mới</span>
    </div>
</div>

<div class="la-form-container">
    <div class="la-info-box">
        <i class="bi bi-info-circle-fill"></i>
        <strong>Lưu ý:</strong> Mã đơn hàng sẽ được tự động tạo sau khi lưu
    </div>

    <form asp-action="Create" method="post">
        <div class="la-form-section">
            <h3 class="la-section-title">
                <i class="bi bi-info-circle me-2" style="color: var(--la-gold);"></i>
                Thông tin đơn hàng
            </h3>

            <div class="la-form-group">
                <label class="la-form-label">
                    Khách hàng
                    <span class="required">*</span>
                </label>
                <div class="la-input-with-icon">
                    <i class="bi bi-person la-input-icon"></i>
                    <select asp-for="ContactId" asp-items="ViewBag.Contacts" class="la-form-select" required>
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                </div>
            </div>

            <div class="la-form-row">
                <div class="la-form-group">
                    <label class="la-form-label">
                        Tổng tiền
                        <span class="required">*</span>
                    </label>
                    <div class="la-input-with-icon">
                        <i class="bi bi-cash-coin la-input-icon"></i>
                        <input asp-for="TotalAmount" class="la-form-input" type="number" min="0" step="1000" placeholder="0" required />
                    </div>
                    <span class="la-helper-text">Đơn vị: VND</span>
                </div>

                <div class="la-form-group">
                    <label class="la-form-label">Trạng thái</label>
                    <div class="la-input-with-icon">
                        <i class="bi bi-flag la-input-icon"></i>
                        <input asp-for="Status" class="la-form-input" placeholder="VD: Pending, Processing..." />
                    </div>
                </div>
            </div>
        </div>

        <div class="la-form-actions">
            <button type="submit" class="la-btn la-btn-primary">
                <i class="bi bi-check-circle-fill"></i>
                Lưu
            </button>
            <a asp-action="Index" class="la-btn la-btn-secondary">
                <i class="bi bi-x-circle"></i>
                Hủy
            </a>
        </div>
    </form>
</div>

<script>
    // Format currency input
    var amountInput = document.querySelector('input[name="TotalAmount"]');
    if (amountInput) {
        amountInput.addEventListener('blur', function(e) {
            var value = parseFloat(e.target.value);
            if (!isNaN(value)) {
                e.target.value = Math.round(value);
            }
        });
    }

    // Form validation
    var form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            var contactId = document.querySelector('select[name="ContactId"]').value;
            var totalAmount = document.querySelector('input[name="TotalAmount"]').value;

            if (!contactId) {
                e.preventDefault();
                alert('Vui lòng chọn khách hàng!');
                return false;
            }

            if (!totalAmount || parseFloat(totalAmount) <= 0) {
                e.preventDefault();
                alert('Vui lòng nhập tổng tiền hợp lệ (lớn hơn 0)!');
                return false;
            }
        });
    }

    // Prevent double submission
    var submitButton = document.querySelector('button[type="submit"]');
    if (submitButton && form) {
        form.addEventListener('submit', function() {
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang lưu...';
            setTimeout(function() {
                submitButton.disabled = false;
                submitButton.innerHTML = '<i class="bi bi-check-circle-fill"></i> Lưu';
            }, 3000);
        });
    }
</script>