@{
    var userName = Context.Session.GetString("UserName");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Charm CRM Sync Dashboard</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="~/css/lux_layout.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="la-navbar">
        <div class="la-navbar-container">
            <button class="la-toggle-btn" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <a class="la-navbar-brand" href="/">
                <i class="bi bi-diagram-3"></i>
                <span>Charm CRM</span>
            </a>

            <div class="la-navbar-right">
                <div class="la-sync-badge">
                    <i class="bi bi-cloud-arrow-left-right"></i>
                    <span>Sync Dashboard</span>
                </div>

                @if (!string.IsNullOrEmpty(userName))
                {
                    <div class="la-dropdown">
                        <a href="#" class="la-user-btn" id="userDropdown">
                            <i class="bi bi-person-circle"></i>
                            <span class="la-user-name">@userName</span>
                        </a>
                        <ul class="la-dropdown-menu">
                            <li><a class="la-dropdown-item" href="/Account/Profile"><i class="bi bi-person"></i> Hồ sơ</a></li>
                            <li><a class="la-dropdown-item" href="/Account/Settings"><i class="bi bi-gear"></i> Cài đặt</a></li>
                            <li><div class="la-dropdown-divider"></div></li>
                            <li><a class="la-dropdown-item la-logout" href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/Account/Login" class="la-login-btn">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Đăng nhập</span>
                    </a>
                }
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="la-sidebar" id="sidebarMenu">
        <a href="/" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
            <i class="bi bi-house-door"></i>
            <span>Dashboard</span>
        </a>
        <a href="/Contacts" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contacts" ? "active" : "")">
            <i class="bi bi-people"></i>
            <span>Contacts</span>
        </a>
        <a href="/Orders" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">
            <i class="bi bi-box-seam"></i>
            <span>Orders</span>
        </a>
        <a href="/SyncLogs" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "SyncLogs" ? "active" : "")">
            <i class="bi bi-arrow-repeat"></i>
            <span>Sync Logs</span>
        </a>
        <a href="/Settings" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
            <i class="bi bi-gear"></i>
            <span>Settings</span>
        </a>
    </div>

    <!-- Content -->
    <div class="la-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="la-footer">
        &copy; @DateTime.Now.Year - Charm CRM Sync Dashboard
    </footer>

    <script>
        const toggleBtn = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebarMenu');

        toggleBtn?.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (window.innerWidth <= 992) {
                if (!sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
                    sidebar.classList.remove('show');
                }
            }
        });

        // Dropdown toggle
        const userDropdown = document.getElementById('userDropdown');
        if (userDropdown) {
            userDropdown.addEventListener('click', (e) => {
                e.preventDefault();
                const menu = userDropdown.nextElementSibling;
                menu.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', (e) => {
                if (!userDropdown.contains(e.target)) {
                    const menu = document.querySelector('.la-dropdown-menu');
                    menu?.classList.remove('show');
                }
            });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>